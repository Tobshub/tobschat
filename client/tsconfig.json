{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "..",
    "baseUrl": "./src",
    "paths": {
      "@server/*": ["../../server/src/*"],
      "@utils/*": ["./utils/*"],
      "@pages/*": ["./pages/*"],
      "@layouts/*": ["./layouts/*"],
      "@assets/*": ["./assets/*"],
      "@data/*": ["./data/*"]
    }
  },
  "include": ["src", "../server/src", "../server/node_modules/.prisma/client"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

